@model List<MainPagePortfolioViewModel>
@{
    ViewData["pageindex"] = -3;
    ViewData["Title"] = "نمونه کار ها";
}

@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="/admin/plugins/datatables/dataTables.bootstrap4.css">
}


@section ContentHeader{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"> نمونه کار ها</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item">
                            <a asp-area="admin"
                               asp-controller="home"
                               asp-action="index">خانه</a>
                        </li>
                        <li class="breadcrumb-item active">لیست نمونه کار ها</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

}





<div class="card">
    <div class="card-header">
        <h3 class="card-title">جدول نمونه کار ها</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>تصویر</th>
                    <th>نام</th>
                    <th>نام گروه</th>
                    <th>نمایش در صفحه اصلی</th>
                    <th>درستورات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>
                            <div>
                                <img class="img-fluid img-thumbnail" src="~/main/img/portfolio/@p.ImageName" style="max-height:50px" />
                            </div>
                        </td>
                        <td>@p.Name</td>
                        <td>
                            @p.Category.Name
                        </td>
                        <td>
                            <input class="checkbox" onclick="changeShow(@p.PortfolioId, this.id)"
                                   type="checkbox" name="p@(p.PortfolioId)" id="pf@(p.PortfolioId)" @(p.ShowInMainPage ? "checked" : "") />
                        </td>
                        <td>
                            <div class="btn-group">
                                <a onclick="deleteThis(@p.PortfolioId)" class="btn btn-outline-danger">حذف</a>
                                <a asp-area="admin"
                                   asp-controller="portfolio"
                                   asp-action="edit"
                                   asp-route-id="@p.PortfolioId" class="btn btn-outline-primary">ویرایش</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>تصویر</th>
                    <th>نام</th>
                    <th>نام گروه</th>
                    <th>درستورات</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->





@section scripts{

    <!-- DataTables -->
    <script src="/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/admin/plugins/datatables/dataTables.bootstrap4.js"></script>

    <!-- Sweet Alert 2 -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- page script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
            });
            $('#example2').DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "autoWidth": false
            });
        });</script>

    <script>
        function deleteThis(id) {
            Swal.fire({
                title: "حذف",
                text: "آیا از حذف ایتم مطمءن هستید!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'بله, حذف کن!',
                cancelButtonText:'لغو'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.getJSON("/admin/portfolio/delete/" + id,
                        function (data) {
                            if (data == false || data == null) {
                                Swal.fire({
                                    position: 'top-end',
                                    icon: 'error',
                                    title: 'حذف انجام نشد...',
                                    showConfirmButton: false,
                                    timer: 1500
                                })
                              
                            } else {
                                Swal.fire({
                                    position: 'top-end',
                                    icon: 'success',
                                    title: 'حذف انجام شد...',
                                    showConfirmButton: true,
                                    timer: 3000,
                                    confirmButtonText: 'رفرش صفحه'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        location.reload();
                                    }
                                });
                                
                            }

                        });
                }
            })
        }

        function changeShow(id, inputId) {
            //alert("Checkbox state (" + inputId + ") = " + $('#'+inputId).is(':checked'));
            $.getJSON("/admin/change-show/" + id + "/" + $('#' + inputId).is(':checked'),
                function (data) {
                    if (data == false || data == null) {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'error',
                            title: 'تغییر انجام نشد...',
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }

                    $.each(data, function () {
                        $(inputId).attr('value', this.showInMain)
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'تغییر انجام شد...',
                            showConfirmButton: false,
                            timer: 1500
                        })
                    })
                },
            )

        }
    </script>
}