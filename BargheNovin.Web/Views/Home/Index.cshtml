
@{
    ViewData["Title"] = "صفحه اصلی";
    var pages = ViewData["Pages"] as List<PageViewModel>;
    var portfolio = ViewData["portfolio"] as List<MainPagePortfolioViewModel>;
    PageViewModel sPageVm = pages[0];
    PageViewModel fwPageVm = pages[0];
    PageViewModel wsPageVm = pages[0];
    foreach (var p in pages)
    {
        switch (p.PageName)
        {
            case "Services":
                sPageVm = p;
                break;
            case "for-work":
                fwPageVm = p;
                break;
            case "work-samples":
                wsPageVm = p;
                break;
        }
    }
}

@section main_image  {
    <div style="overflow:hidden;">
        <header class="header" id="header">
            <!--header-start-->
            <div class="container">
                <figure class="logo animated fadeInDown delay-07s">
                    <a href="#"><img src="/main/img/@ViewData["main-logo"]" alt=""></a>
                </figure>
                <h1 class="animated fadeInDown delay-07s">
                    به برق نوین خوش امدید
                </h1>
                <ul class="we-create animated fadeInUp delay-1s">
                    <li>دارای پروانه نظارت برق نظام مهندسی</li>
                </ul>
                <div class="btn btn-group">
                    <a class="link animated fadeInUp delay-1s" href="/login">
                        ورود
                    </a>
                    <a class="link animated fadeInUp delay-1s" href="/register">
                        ثبت نام
                    </a>
                </div>

            </div>
        </header><!--header-end-->
    </div>
}


